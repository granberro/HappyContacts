<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.tsoft.happycontacts" android:versionCode="1"
	android:versionName="@string/version">
	<application android:debuggable="true" android:icon="@drawable/smile" android:label="@string/app_name">
		<activity android:name=".HappyContactsPreferences"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".TestAppActivity"></activity>
		<activity android:name=".BlackListActivity"></activity>
		<receiver android:name="ServiceStarterReceiver">
			<intent-filter>
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.intent.action.PACKAGE_INSTALL" />
				<data android:scheme="package" />
			</intent-filter>
		</receiver>
		<receiver android:name="AlarmReceiver"></receiver>
		<service android:name="DayMatcherService"></service>
		<activity android:name="ReminderPopupActivity"
			android:launchMode="singleInstance" android:excludeFromRecents="true"
			android:taskAffinity="" android:theme="@android:style/Theme.Dialog">

		</activity>
	</application>
	<uses-sdk android:minSdkVersion="3" />

	<uses-permission android:name="android.permission.READ_CONTACTS"></uses-permission>
</manifest> 