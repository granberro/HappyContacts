<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:layout_height="wrap_content" style="@style/WidgetBackground"
  android:orientation="vertical">

  <RelativeLayout android:layout_width="fill_parent" android:layout_height="wrap_content"
    >
    <ImageView android:src="@drawable/icon" android:layout_alignParentLeft="true"
      android:id="@+id/widget_icon" android:layout_width="24dp" android:layout_height="24dp"
      android:scaleType="fitXY" />
    <TextView android:text="@string/app_name" android:layout_height="wrap_content"
      android:layout_toRightOf="@id/widget_icon" android:layout_width="wrap_content"
      android:paddingLeft="4dp" android:textStyle="italic"/>
    <TextView android:id="@+id/widget_event_counter"
      android:layout_alignParentRight="true" android:layout_height="wrap_content"
      android:layout_width="wrap_content" android:paddingRight="6dp" android:textStyle="bold"/>
  </RelativeLayout>
  <include layout="@layout/divider" />


  <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
    android:id="@+id/widget.events.list" android:orientation="vertical" android:paddingLeft="6dp"
    android:paddingRight="6dp">
    <!--  test text, put a loading icon here in the service -->
    <RelativeLayout android:id="@+id/RelativeLayout02" android:layout_width="wrap_content"
      android:layout_height="wrap_content"></RelativeLayout>
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
      android:text="toto est content" />
  </LinearLayout>

</LinearLayout>
