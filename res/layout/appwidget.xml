<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/WidgetLayout" android:id="@+id/widget_root">

	<RelativeLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content">
		<ImageView android:src="@drawable/notif"
			android:layout_alignParentLeft="true" android:id="@+id/widget_icon"
			style="@style/WidgetIcon" />
		<TextView android:text="@string/app_name" style="@style/WidgetTitle"
			android:layout_toRightOf="@id/widget_icon" />
		<TextView android:id="@+id/widget_event_counter" style="@style/WidgetNotification"
			android:layout_alignParentRight="true" />
	</RelativeLayout>

	<ImageView xmlns:android="http://schemas.android.com/apk/res/android"
		android:src="@android:drawable/divider_horizontal_dark"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:scaleType="fitXY" />

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="fill_parent" android:id="@+id/widget.events.list"
		android:orientation="vertical" android:paddingLeft="6dp"
		android:paddingRight="6dp" android:layout_gravity="center_vertical">
		
	</LinearLayout>

</LinearLayout>
