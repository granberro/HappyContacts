  <TextView android:id="@+id/user_name" android:text="userName"
    android:layout_width="fill_parent" android:layout_height="wrap_content"

    android:layout_toRightOf="@id/icon_sync"
    android:layout_alignParentRight="true"
    android:layout_alignParentTop="false" 
    android:layout_alignWithParentIfMissing="true"
    android:textColor="#FFFFFF" android:textSize="18dip"
    android:gravity="center_vertical" />

  <TextView android:id="@+id/birthday_date"
    android:layout_toRightOf="@id/icon_sync" android:text="@string/unknow_birthday"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true" android:layout_below="@id/user_name"
