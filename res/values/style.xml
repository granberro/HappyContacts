<?xml version="1.0" encoding="utf-8"?>
<resources>
  <style name="HappyContacts"></style>

	<!-- Widget styles -->
  <style name="HappyContacts.Widget">
    <item name="android:textAppearance">?android:attr/textAppearanceSmallInverse</item>
  </style>

  <style name="HappyContacts.Widget.Layout">
    <item name="android:background">@drawable/widget_bg</item>
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">fill_parent</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="HappyContacts.Widget.Title">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="HappyContacts.Widget.Notification">
    <item name="android:textSize">10sp</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
  </style>

  <style name="HappyContacts.Widget.ContentDay">
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:textStyle">bold</item>
    <item name="android:gravity">left</item>
  </style>

  <style name="HappyContacts.Widget.ContentNames">
    <item name="android:layout_width">fill_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:lines">1</item>
    <item name="android:ellipsize">end</item>
    <item name="android:scrollHorizontally">true</item>
    <item name="android:gravity">center</item>
  </style>
</resources>
